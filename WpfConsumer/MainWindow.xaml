<Window x:Class="WpfConsumer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfConsumer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Grid.Row="0" Grid.Column="0" Content="Your Input" ></Label>
        <TextBox Grid.Row="0" HorizontalAlignment="Left" Margin="72,4,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" x:Name="txtInput" TextChanged="txtInput_TextChanged"/>
        <DataGrid x:Name="dataGridClients" AutoGenerateColumns="True" Margin="0,46,0,0" />
    </Grid>
</Window>
